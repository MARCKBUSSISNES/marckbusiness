            padding: 1rem;
        }
    </style>
    <script>
        // Datos dinámicos simulados
        const companyName = "Marck Business";
        const services = [
            "Business Consulting",
            "Marketing Strategy",
            "Financial Planning"
        ];

        // Función para renderizar contenido dinámico
        function renderContent() {
            document.getElementById("company-name").textContent = companyName;
            document.getElementById("about-text").textContent = `Welcome to ${companyName}! We are dedicated to helping your business grow and succeed.`;

            const servicesList = document.getElementById("services-list");
            services.forEach(service => {
                const listItem = document.createElement("li");
                listItem.textContent = service;
                servicesList.appendChild(listItem);
            });

            document.getElementById("footer-text").textContent = `© ${new Date().getFullYear()} ${companyName}. All Rights Reserved.`;
        }

        // Ejecutar la función al cargar la página
        window.onload = renderContent;
    </script>
</head>
